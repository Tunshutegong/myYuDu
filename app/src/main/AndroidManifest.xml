<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tunsh.greendaodemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 向SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".AFaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.activity.menu.GideActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ReadBookActivity" />
        <activity android:name=".ReadActivity" />
        <activity android:name="com.activity.menu.MenuActivity" />
        <activity android:name="com.activity.menu.importbooks.ImportBooksActivity" />
        <activity android:name="com.activity.menu.jingxuan.BookShortActivity" />
        <activity android:name="com.activity.menu.jingxuan.CurrencyActivity" />
        <activity android:name="com.activity.menu.bookdetail.BookDetailsActivity" />
        <activity android:name="com.activity.menu.bookdetail.ChapterListActivity" />
        <activity android:name="com.activity.menu.bookdetail.CommentListActivity" />
        <activity android:name="com.activity.menu.bookdetail.CommentDetailActivity" />
        <activity android:name="com.activity.menu.bookclassify.BookClassifyActivity" />
        <activity android:name="com.activity.menu.booklist.BookListActivity" />
        <activity android:name="com.activity.menu.Main2Activity"></activity>
    </application>

</manifest>