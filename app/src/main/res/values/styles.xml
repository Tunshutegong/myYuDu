<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Read" />
    <style name="Read.BottomMenu">
        <item name="android:textColor">@color/read_menu_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/read_bg_bottom_menu</item>
    </style>
    <style name="Read.BottomMenu.Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10.0dp</item>
        <item name="android:paddingRight">10.0dp</item>
        <item name="android:paddingTop">18.0dp</item>
        <item name="android:paddingBottom">18.0dp</item>
    </style>

    <style name="Read.BottomMenu.IconButton">
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_width">68dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="Read.TextAppearance.ActionBar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/read_text_primary</item>
    </style>
    <style name="Read.Setting" />
    <style name="Read.Setting.Button">
        <item name="android:background">@drawable/read_bg_setting_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/read_menu_text</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:minWidth">42dp</item>
    </style>
    <style name="Read.Setting.Dialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Read.Setting.ThemeView">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="super_cornerRadius">10dp</item>
        <item name="super_strokeWidth">1dp</item>
        <item name="super_strokeColor_selected">@color/colorAccent</item>
    </style>

    <style name="blank_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#e5e5e5</item>
    </style>
    <style name="blank_space">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">#f6f6f6</item>
    </style>

    <style name="CustomDialogStyle" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@drawable/pp_bg_dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>

        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>

        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>

        <!-- 背景模糊 -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- 允许对话框的背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>

    </style>
</resources>
